:80 {
    root * /srv
    file_server

    @static {
        path_regexp hashed ^/assets/.+\.[a-f0-9]{8}\..+$
    }
    header @static Cache-Control "public, max-age=31536000, immutable"

    # Donâ€™t cache index.html so updates propagate
    @index {
        path /index.html
    }
    header @index Cache-Control "no-cache"

    try_files {path} /index.html
}

